<!-- app/src/main/res/values/styles.xml -->
<resources>
    <!-- Theme của app bạn -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- ... -->
    </style>

    <!-- Title khi AppBar đang rộng (expanded) -->
    <style name="ExpandedAppBarTitle" parent="TextAppearance.AppCompat.Title">
        <!-- đặt trong suốt để không hiển thị -->
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <!-- Title khi AppBar bị thu nhỏ (collapsed) -->
    <style name="CollapsedAppBarTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>
