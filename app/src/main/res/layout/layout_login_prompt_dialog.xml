<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background"
    android:padding="16dp">

    <!-- Icon -->
    <ImageView
    android:id="@+id/iv_dialog_icon"
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:src="@drawable/error_image"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:contentDescription="Login icon" />

        <!-- Message -->
    <TextView
    android:id="@+id/tv_dialog_message"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginHorizontal="8dp"
    android:text="Cook Lab muốn bạn đăng nhập để thực hiện chức năng này"
    android:textColor="#212121"
    android:textSize="16sp"
    android:textAlignment="center"
    android:fontFamily="sans-serif-medium"
    app:layout_constraintTop_toBottomOf="@id/iv_dialog_icon"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

        <!-- Cancel Button -->
    <Button
    android:id="@+id/btn_dialog_cancel"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="24dp"
    android:layout_marginEnd="8dp"
    android:text="Hủy"
    android:textColor="#757575"
    android:backgroundTint="#E0E0E0"
    android:textAllCaps="false"
    app:layout_constraintTop_toBottomOf="@id/tv_dialog_message"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toStartOf="@id/btn_dialog_continue"
    app:layout_constraintWidth_percent="0.45" />

        <!-- Continue Button -->
    <Button
    android:id="@+id/btn_dialog_continue"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="24dp"
    android:layout_marginStart="8dp"
    android:text="Tiếp tục"
    android:textColor="#FFFFFF"
    android:backgroundTint="#0288D1"
    android:textAllCaps="false"
    app:layout_constraintTop_toBottomOf="@id/tv_dialog_message"
    app:layout_constraintStart_toEndOf="@id/btn_dialog_cancel"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintWidth_percent="0.45" />

</androidx.constraintlayout.widget.ConstraintLayout>