<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- AppBar với ảnh header co dãn -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="?attr/colorSurface"
            app:statusBarScrim="@android:color/transparent"
            app:titleEnabled="true"
            app:expandedTitleTextAppearance="@style/ExpandedAppBarTitle"
            app:collapsedTitleTextAppearance="@style/CollapsedAppBarTitle">

            <ImageView
                android:id="@+id/headerImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:fitsSystemWindows="true"
                app:layout_collapseMode="parallax"
                android:src="@drawable/error_image"/>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbarDetail"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:navigationIcon="@drawable/ic_arrow_back_white"
                app:title=""
                app:titleTextColor="@android:color/white"
                app:layout_collapseMode="pin"/>

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Nội dung cuộn -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="56dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:paddingBottom="80dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/black"
            android:padding="16dp">

            <!-- Tiêu đề + bookmark -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên món ăn"
                    android:textColor="@android:color/white"
                    android:textSize="24sp"
                    android:textStyle="bold"/>

                <ImageButton
                    android:id="@+id/btnBookmark"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentEnd="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/favorite" />

            </RelativeLayout>

            <!-- Thông tin tác giả -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="4dp">

                    <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imgAuthor"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/placeholder" />

                    <TextView
                        android:id="@+id/recipeUserTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Người đăng"
                        android:layout_marginStart="8dp"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/userIdCooklab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="admin"
                        android:layout_marginStart="8dp"
                        android:textColor="#B0BEC5"
                        android:textSize="12sp"/>
            </LinearLayout>

            <!-- Mô tả -->
            <TextView
                android:id="@+id/recipeDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Món ngon bổ dưỡng"

                android:textColor="@color/blue"
                android:textSize="14sp"
                android:paddingVertical="8dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#333"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingVertical="8dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_time"
                    app:tint="@android:color/white"/>

                <TextView
                    android:id="@+id/tvCookTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="30 phút"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#333"/>

            <!-- Nguyên liệu -->
            <TextView
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nguyên Liệu"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <!-- Mục Servings -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="4dp">

                <ImageView
                    android:id="@+id/imgServingsIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/users_recipe"
                    android:tint="@android:color/white"
                    tools:ignore="UseAppTint" />

                <TextView
                    android:id="@+id/tvServings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="2 người"
                    android:textColor="#B0BEC5"
                    android:textSize="14sp"/>
            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvIngredients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#333"
                android:layout_marginTop="16dp"/>

            <!-- Các bước làm -->
            <TextView
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Các bước làm"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvSteps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#333"
                android:layout_marginTop="16dp"/>

            <!-- Phản ứng -->
            <TextView
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hãy thả biểu tượng cảm xúc"
                android:textColor="@android:color/white"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="8dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/ivHeart"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/heart"
                    app:tint="#FF5252"/>
                <TextView
                    android:id="@+id/likeCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"/>

                <ImageView
                    android:id="@+id/ivMlem"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/mlem"/>
                <TextView
                    android:id="@+id/mlemCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"/>

                <ImageView
                    android:id="@+id/ivClap"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/clap"
                    app:tint="#FFC107"/>
                <TextView
                    android:id="@+id/clapCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#333"
                android:layout_marginTop="16dp"/>

            <!-- Bình luận -->
            <!-- Bình luận: header + count -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="16dp"
                android:paddingBottom="4dp">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_comment"
                    app:tint="@android:color/white" />

                <TextView
                    android:id="@+id/tvCommentHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Bình luận 0"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!-- Link xem tất cả, ẩn khi không có comment -->
            <TextView
                android:id="@+id/tvViewAllComments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Xem tất cả bình luận"
                android:textColor="#90CAF9"
                android:textSize="14sp"
                android:visibility="gone"
                android:clickable="true"
                android:focusable="true"/>

            <!-- RecyclerView chứa danh sách comment, ẩn mặc định -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvComments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="8dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imgCurrentUser"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:paddingRight="4dp"
                    android:src="@drawable/placeholder" />
                <EditText
                    android:id="@+id/etComment"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_comment_input"
                    android:hint="Thêm bình luận"
                    android:padding="12dp"
                    android:textSize="12sp"
                    android:textColor="@android:color/white"/>

                <ImageButton
                    android:id="@+id/btnPostComment"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_send"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:tint="@android:color/white"/>
            </LinearLayout>

            <!-- Thông tin người đăng công thức -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="16dp"
                android:background="@android:color/black"
                android:padding="16dp"
                android:layout_marginTop="8dp"
                android:elevation="4dp">

                <!-- ID công thức, ảnh người đăng, tên người đăng -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingTop="8dp"
                    android:layout_gravity="center">

                    <TextView
                        android:id="@+id/tvRecipeId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ID Công thức: 25022005"

                        android:paddingBottom="10dp"
                        android:textColor="#B0BEC5"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/tvRecipeDayCreate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingBottom="10dp"
                        android:textColor="#B0BEC5"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/tvRecipeDayUpdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingBottom="10dp"
                        android:textColor="#B0BEC5"
                        android:textSize="14sp" />

                <!-- Hình ảnh của tác giả -->
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/imgAuthor2"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/placeholder"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lên sóng bởi"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"/>
                <!-- Tên tác giả -->
                    <TextView
                        android:id="@+id/tvAuthorName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Admin"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp"
                        android:textStyle="bold"/>

            </LinearLayout>

            <!-- Nút follow -->
                <Button
                    android:id="@+id/btnFollow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Follow"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="@color/red"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textAllCaps="false" />

            </LinearLayout>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <!-- include bottom nav -->
    <include
        layout="@layout/include_bottom_nav"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
