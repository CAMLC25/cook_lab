<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    android:orientation="vertical">

    <!-- Toolbar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/toolbar_background">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/toolbar_background"
            app:navigationIcon="@drawable/ic_arrow_back_white"
            app:title="Cập nhật công thức"
            app:titleTextColor="@color/text_primary" />
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Nội dung chính -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="48dp"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Phần ảnh và thông tin cơ bản -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <!-- Ảnh chính -->
                <ImageView
                    android:id="@+id/mainImagePreview"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="200dp"
                    android:scaleType="centerInside"
                    android:background="@color/input_background"
                    android:src="@drawable/start_activity"
                    android:contentDescription="Ảnh công thức" />

                <!-- Tên và mô tả -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tên món:"
                        android:textColor="@color/text_primary"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/titleEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/input_background"
                        android:hint="Món canh bí ngon nhất nhà mình"
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/text_secondary"
                        android:padding="8dp"
                        android:layout_marginBottom="8dp" />

                    <EditText
                        android:id="@+id/descriptionEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/input_background"
                        android:hint="Hãy chia sẻ cảm hứng của bạn..."
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/text_secondary"
                        android:padding="8dp"
                        android:minLines="3"
                        android:gravity="top" />
                </LinearLayout>
            </LinearLayout>

            <!-- Khẩu phần và thời gian -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Khẩu phần:"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/servingsEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/input_background"
                        android:hint="2 người"
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/text_secondary"
                        android:padding="8dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thời gian nấu:"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/cookTimeEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/input_background"
                        android:hint="1 tiếng 30 phút"
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/text_secondary"
                        android:padding="8dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Danh mục -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Danh mục món ăn:"
                android:textColor="@color/text_primary"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/categorySpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@color/input_background"
                android:popupBackground="@color/input_background"
                android:spinnerMode="dropdown"
                android:focusable="true"
                android:focusableInTouchMode="true" />

            <!-- Nguyên liệu -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nguyên liệu"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/ingredientsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/addIngredientButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"
                android:text="+ Nguyên liệu"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="16dp" />

            <!-- Các bước -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Các bước"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/stepsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/addStepButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"
                android:text="+ Bước làm"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="16dp" />

            <!-- Nút Hủy và Lưu -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end">

                <Button
                    android:id="@+id/cancelButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/delete_button"
                    android:text="Hủy"
                    android:textColor="@color/text_primary"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/saveButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorPrimary"
                    android:text="Lưu công thức"
                    android:textColor="@color/text_primary" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
