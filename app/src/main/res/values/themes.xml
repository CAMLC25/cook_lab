<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.CookLab" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary bar -->
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryVariant">@android:color/black</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <!-- Accent cho FAB -->
        <item name="colorSecondary">#FF9800</item>
        <item name="colorOnSecondary">@android:color/white</item>

        <!-- Surface và background đổi thành đen -->
        <item name="colorSurface">@android:color/black</item>
        <item name="android:windowBackground">@android:color/black</item>

        <!-- Status bar không trong suốt nữa, có nền đen -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="android:windowTranslucentStatus">false</item>

        <!-- Navigation bar trong suốt nếu cần -->
        <item name="android:windowTranslucentNavigation">true</item>

        <!-- Chữ và icon trên nền đen -->
        <item name="colorOnSurface">@android:color/white</item>
        <item name="colorOnSurfaceVariant">#B0BEC5</item>
    </style>
    <!-- Biến thể NoActionBar dùng cho ChatActivity -->
    <style name="Theme.CookLab.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- tuỳ chọn: làm trong suốt status bar -->
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
</resources>
